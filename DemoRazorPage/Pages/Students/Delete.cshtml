@page
@model DemoRazorPage.Pages.Students.DeleteModel
@{
}

<table>
	<tr>
		<td>ID</td>
		<td>
			<p>@Model.student.Id</p>
		</td>
	</tr>
	<tr>
		<td>Name</td>
		<td>
			<p>@Model.student.Name</p>
		</td>
	</tr>
	<tr>
		<td>Gender</td>
		<td>
			@(Model.student.Gender ? "Male" : "Female")
		</td>
	</tr>
	<tr>
		<td>Department Name</td>
		<td>
			<p>@Model.student.Depart.Name</p>
		</td>
	</tr>
	<tr>
		<td>Date Of Birth</td>
		<td>
			<p>@Model.student.Dob</p>
		</td>
	</tr>
	<tr>
		<td>GPA</td>
		<td>
			<p>@Model.student.Gpa</p>
		</td>
	</tr>
	<tr>
		<td>
			<a asp-page="/Students/Delete" asp-route-sid="@Model.student.Id" onclick="return confirm('Are you sure you want to delete this student?');">
				<button type="button">Delete Student</button>
			</a>
		</td>
	</tr>
</table>