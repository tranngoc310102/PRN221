<Window x:Class="DemoAsynschonus3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAsynschonus3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStartButton" 
          Content="Start" HorizontalAlignment="Center"
          Margin="0,10,0,0" VerticalAlignment="Top" 
          Width="75" Height="24"
          Click="OnStartButtonClick" />
        <TextBox x:Name="txtUrl" TextWrapping="Wrap"
                 FontFamily="Consolas" 
                   Width="300" Height="30" Margin="10,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtResults" TextWrapping="Wrap"
                 FontFamily="Consolas" 
                 VerticalScrollBarVisibility="Visible"
                 Margin="0,45,0,0"/>
    </Grid>
</Window>
