<Window x:Class="JsonToXml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonToXml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_load_json" HorizontalAlignment="Left" Margin="124,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.75,-0.301" Content="Chose File Json" Height="42" Width="116" Click="btn_load_json_Click"/>
        <Button x:Name="btn_convert_Json" Content="Convert To Json" HorizontalAlignment="Left" Margin="574,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.75,-0.301" Height="42" Width="146" Click="btn_convert_Json_Click"/>
        <Button x:Name="btn_convert_xml" Content="Convert To Xml" HorizontalAlignment="Left" Margin="364,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.75,-0.301" Height="42" Width="139" Click="btn_convert_xml_Click"/>
        <TextBox HorizontalAlignment="Center" Margin="0,162,0,0" Name="txtData" TextWrapping="Wrap" Text="Nội dung file sẽ hiển thị ở đây " VerticalAlignment="Top" Width="800" Height="262"/>

    </Grid>
</Window>
